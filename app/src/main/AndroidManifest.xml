<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.namissecret">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.example.android.namissecret.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.example.android.namissecret.RegistrationActivity" />
        <activity android:name="com.example.android.namissecret.BoardActivity" />
        <activity android:name="com.example.android.namissecret.SettingsActivity" />
        <activity android:name="com.example.android.namissecret.MatchActivity" />
        <activity android:name="com.example.android.namissecret.fragments.MessengerItemFragment" android:windowSoftInputMode="adjustPan"/>
        <activity android:name="com.example.android.namissecret.fragments.MessengerChat"  android:windowSoftInputMode="adjustPan" />

    </application>

</manifest>